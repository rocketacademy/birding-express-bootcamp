<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Notes App</title>

    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link href="/styles.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('navbar'); -%>

    <div class="container mt-2">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header py-3">
              <h4 class="my-0 fw-normal">Notes</h4>
            </div>
            <div class="card-body">
              <table class="table table-sm">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Behavior</th>
                    <th>Flock Size</th>
                    <th>Date Time</th>
                    <th>Creator</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% for (let i=0; i < notes.length; i += 1) { %>
                  <tr>
                    <td><%= notes[i]['id'] %></td>
                    <td><%= notes[i]['behavior'] %></td>
                    <td><%= notes[i]['flockSize'] %></td>
                    <td><%= notes[i]['dateTime'] %></td>
                    <td><%= notes[i]['email'] %></td>
                    <td>
                      <a href="/note/<%= notes[i]['id'] %>" class="btn btn-primary">View</a>
                    </td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <div class="row mt-2">
        <div class="col-12">
          <div class="card">
            <div class="card-header py-3">
              <h4 class="my-0 fw-normal">Comments</h4>
            </div>
            <div class="card-body">
              <table class="table table-sm">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Comment</th>
                    <th>Note Id</th>
                  </tr>
                </thead>
                <tbody>
                  <% for (let i=0; i < comments.length; i += 1) { %>
                  <tr>
                    <td><%= i + 1 %></td>
                    <td><%= comments[i]['comment'] %></td>
                    <td><%= comments[i]['note_id'] %></td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
