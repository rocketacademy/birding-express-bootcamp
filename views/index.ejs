<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('partials/bootstrap')%>
    <link rel="stylesheet" href="/styles.css" />
    <title>Birding</title>
  </head>
  <body>
    <%- include('partials/nav') %>
    <main class="container-fluid">
      <h2 class="text-center mt-4">List of notes below</h2>
      <div class="text-center">
        Sorting By:
        <form action="/">
          <select name="sort">
            <option value="date">Date</option>
            <option value="time">Time</option>
            <option value="day">Day</option>
          </select>
          <input class="btn btn-success btn-sm" type="submit" value="Submit" />
        </form>
      </div>
      <table class="table table-hover table-bordered mt-4">
        <thead>
          <tr>
            <th>No.</th>
            <th>Date</th>
            <th>Time</th>
            <th>Day</th>
            <th>Other Functions</th>
          </tr>
        </thead>
        <tbody>
          <% for( let i = 0; i < data.length; i++ ) { %>
          <tr>
            <td>
              <a class="text-white" href="/note/<%= data[i].id %> "
                >Sighting <%= i + 1%></a
              >
            </td>
            <td><%= data[i].date.toISOString().slice(0,10)%></td>
            <td><%= data[i].time %></td>
            <td><%= data[i].day %></td>
            <td>
              <form
                class="button-tile"
                style="display: inline-block"
                action="/note/<%= data[i].id %>/edit"
              >
                <input type="submit" value="Edit" />
              </form>
              <form
                class="button-tile"
                style="display: inline-block"
                action="/note/<%= data[i].id %>?_method=DELETE"
                method="POST"
              >
                <input type="submit" value="Delete" />
              </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </main>
  </body>
</html>
