<!-- Create New Note -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title>Create New Note</title>
  </head>
  <body>
    <h1>Create New Note</h1>

    <div class="container">
      <form action="/note" method="POST">
        <div class="input-div">
          <label for="type_of_owl">Type of Owl</label>
          <input type="text" name="type_of_owl" />
        </div>

        <div class="input-div">
          <label for="photo">Photo</label>
          <input type="text" name="photo" />
        </div>

        <div class="input-div">
          <label for="date">Date</label>
          <input type="date" name="date" />
        </div>

        <div class="input-div">
          <label for="spotter">Spotter</label>
          <input type="text" name="spotter" />
        </div>

        <div class="input-div">
          <label for="cuteness_factor">Cuteness Factor</label>
          <input type="number" name="cuteness_factor" />
        </div>

        <div class="input-div">
          <label for="location">Location</label>
          <input type="text" name="location" />
        </div>

        <button type="submit" value="submit">Submit</button>
      </form>
    </div>
  </body>
</html>
