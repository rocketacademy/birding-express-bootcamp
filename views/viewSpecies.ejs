<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View Species</title>

    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link href="/styles.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('navbar'); -%>

    <div class="container mt-2">
      <div class="row">
        <div class="col-sm-12">
          <div class="card">
            <div class="card-header py-3">
              <h4 class="my-0 fw-normal">Species Details</h4>
            </div>
            <div class="card-body">
              <form
                action="/species/<%= species.id %>/delete?_method=DELETE"
                class="needs-validation"
                novalidate=""
                method="POST"
              >
              <div class="row g-3 mb-3">
                <div class="col-12">
                  <label for="name" class="form-label">Name</label>
                  <hr />
                  <p><%= species.name %></p>
                </div>
              </div>
              <div class="row g-3 mb-3">
                <div class="col-12">
                  <label for="scientificName" class="form-label">Scientific Name</label>
                  <hr />
                  <p><%= species.scientificName %></p>
                </div>
              </div>
              <div class="row g-3 mb-3">
                <div class="col-12">
                  <label for="dateTime" class="form-label"
                    >Notes with Species</label
                  >
                  <hr />
                  <% notes.forEach((note) => { %>
                    <p><a href="/note/<%= note.id %>"><%= note.id %></a></p>
                  <% }) %>
                </div>
              </div>
              
              <a href="/species/<%= species.id %>/edit" class="btn btn-primary"
                >Edit Species</a
              >
              <button type="submit" class="btn btn-danger">
                Delete Species
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
