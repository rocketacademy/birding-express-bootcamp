<!-- Edit species. After saving, redirect to species/all page -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title>Edit Species</title>
  </head>
  <body>
    <%- include('../templates/header-user'); -%>
    <div class="container">
      <div class="form-div">
        <h1>New Species</h1>
        <form action="/species/<%= data.id %>/edit?_method=PUT" method="POST">
          <div class="input-div">
            <label for="common_name">Commmon Name</label>
            <input type="text" name="common_name" value="<%= data.name %> " />
          </div>

          <div class="input-div">
            <label for="scientific_name">Scientific Name</label>
            <input
              type="text"
              name="scientific_name"
              value="<%= data.scientific_name %> "
            />
          </div>

          <button type="submit" value="save">Save</button>
        </form>

        <!-- Delete button -->
        <form
          action="/species/<%= data.id %>/edit?_method=DELETE"
          method="POST"
        >
          <button type="submit" value="delete">Delete</button>
        </form>
      </div>
    </div>
  </body>
</html>
